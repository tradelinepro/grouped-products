{% block sw_product_list_grid_columns %}
    {% parent %}

    {% block sw_product_list_grid_columns_grouped %}
        <template #column-customFields.isGrouped="{ item }">
            <sw-icon
                v-if="item.translated?.customFields?.isGrouped"
                name="regular-checkmark-xs"
                small
                class="is--active"
            />
            <sw-icon
                v-else
                name="regular-times-s"
                small
                class="is--inactive"
            />
        </template>
    {% endblock %}
{% endblock %}

{% block sw_product_list_smart_bar_actions_add_download_context_menu_item_downloadable_product %}
    {% parent %}

    {% block sw_product_list_smart_bar_actions_add_download_context_menu_item_grouped_product %}
        <sw-context-menu-item
                v-tooltip="{
                    message: $tc('sw-privileges.tooltip.warning'),
                    disabled: acl.can('product.creator'),
                    showOnDisabledElements: true
                }"
                :router-link="{ name: 'sw.product.create', params: { isGrouped: [true] } }"
                :disabled="!acl.can('product.creator')"
        >
            {{ $tc('grouped-products.buttonAddGroupedProduct') }}
        </sw-context-menu-item>
    {% endblock %}
{% endblock %}
